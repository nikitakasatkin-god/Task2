<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.task2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <FlowPane prefHeight="35.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Введите кол-во сторон" />
                  <TextField fx:id="textField" prefHeight="26.0" prefWidth="61.0">
                     <FlowPane.margin>
                        <Insets left="10.0" />
                     </FlowPane.margin>
                  </TextField>
                  <Button fx:id="vvodNumber" mnemonicParsing="false" onAction="#drawShapes" text="Вывести">
                     <FlowPane.margin>
                        <Insets left="70.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
            </FlowPane>
         </top>
         <center>
            <Canvas fx:id="canvas" height="300.0" width="300.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</VBox>
